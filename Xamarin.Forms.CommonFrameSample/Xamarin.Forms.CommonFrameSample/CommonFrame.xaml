<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
			 x:Class="Xamarin.Forms.CommonFrameSample.CommonFrame"
			 x:Name="_parent">
	<ContentView.Content>
		<AbsoluteLayout>
			<ContentPresenter Content="{Binding Path=MainContent,Source={x:Reference _parent}}" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="{Binding Path=MainContentBounds,Source={x:Reference _parent}}"/>
			<ContentPresenter Content="{Binding Path=FooterMenu,Source={x:Reference _parent}}" AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="{Binding Path=FooterMenuBounds,Source={x:Reference _parent}}"/>			
		</AbsoluteLayout>
	</ContentView.Content>
</ContentView>
